@model AddIssueFormModel

@{
    ViewData["Title"] = "Log Issue";


}

<div class="row">
    <div class="col-lg-6 offset-lg-1 col-sm-12">
        <h1 class="heading-margin">Log Issue</h1>
        <form method="post">
            <div class="form-group">
                <label asp-for="Title">Issue Title</label>
                <input class="form-control" asp-for="Title" placeholder="The title of the issue">
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description">Issue Description</label>
                <textarea class="form-control" rows="5" asp-for="Description" placeholder="Description of the issue"></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <input class="btn btn-primary float-right" type="submit" value="Save" />
        </form>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/> 
}