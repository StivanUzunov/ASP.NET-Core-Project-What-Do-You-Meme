@model BecomeMemerFormModel

@{
    ViewData["Title"] = "Become a Memer";


}

<div class="row">
    <div class="col-lg-6 offset-lg-1 col-sm-12">
        <h1 class="heading-margin">Become a Memer</h1>
        <form method="post">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input class="form-control" asp-for="Name" placeholder="Your name">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber">PhoneNumber</label>
                <input class="form-control" asp-for="PhoneNumber" placeholder="Your phone number"></input>
                <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
            </div>
            <input class="btn btn-primary float-right" type="submit" value="Save" />
        </form>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/> 
}

